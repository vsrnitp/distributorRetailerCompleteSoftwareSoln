<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <title>

    </title>
    <style>

body
{
    counter-reset: Count-Value;     
}
table
{
    border-collapse: separate;
}
tr td:first-child:before
{
  counter-increment: Count-Value;   
  content:  counter(Count-Value);
}

    </style>
</head>
    <body class="container-fluid">
         <h1 style="font-weight: bolder;color: green; text-align: center;">Client List</h1>
         <h1 style="font-weight: bolder;color:rebeccapurple; text-align: center;">(Distributors)</h1>
         <div class="row">
            <div class="col-sm-12" style="text-align: center;">

                <!--creating distributor table...-->
                <table class="table table-hover">
                    <thead>
                      <tr>
                          <th>Sereial No.</th>
                        <th>Name</th>
                        <th>Client Id</th>
                        <th>Address</th>
                        <th>Mobile No</th>
                        <th>E-mail</th>
                        <th>Unpaid Balance</th>
                        <th>PEEK DISTRIBUTOR</th>
                      </tr>
                    </thead>
                    <tbody>
                      
               
                        <% clientData.forEach(function( eachData){ %>
                          <% if(eachData.customerType=='D') { %>
                      <tr>
                        <td></td>
                        <td><%= eachData.name%></td>
                        <td><%= eachData.clientId%></td>
                        <td><%= eachData.address%></td>
                        <td><%= eachData.mobNo%></td>
                        <td><%= eachData.email%></td>
                        <td><%= eachData.leftBal%></td>
                        <td><form action="/distributorDashboard/<%= eachData.email%>"><button class="btn btn-outline-danger">DASHBOARD</button></form></td>
                        
                      </tr>
                      <%} 
                      %>
                      <% }) %>
                    </tbody>
                  </table>

            </div>

         </div>

         <hr/>

         <div class="row">
           <div class="col-sm-12" style="text-align: center;">
            <h1 style="font-weight: bolder; text-align: center;color: aqua;">(Customers)</h1>

               <!--creating customer table...-->
               <table class="table table-hover">
                <thead>
                  <tr>
                      <th>Sereial No.</th>
                    <th>Name</th>
                    <th>Client Id</th>
                    <th>Address</th>
                    <th>Mobile No</th>
                    <th>E-mail</th>
                    <th>Unpaid Balance</th>
                  </tr>
                </thead>
                <tbody>
                  
           
                    <% clientData.forEach(function( eachData){ %>
                      <% if(eachData.customerType=='C') { %>
                  <tr>
                    <td></td>
                    <td><%= eachData.name%></td>
                    <td><%= eachData.clientId%></td>
                    <td><%= eachData.address%></td>
                    <td><%= eachData.mobNo%></td>
                    <td><%= eachData.email%></td>
                    <td><%= eachData.leftBal%></td>
                    
                  </tr>
                  <%} 
                  %>
                  <% }) %>
                </tbody>
              </table>


           </div>
         </div>
    </body>


</html>


