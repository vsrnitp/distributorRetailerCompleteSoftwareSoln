    <title>

    </title>
    <style>

body
{
    counter-reset: Count-Value;     
}
table
{
    border-collapse: separate;
}
tr td:first-child:before
{
  counter-increment: Count-Value;   
  content:  counter(Count-Value);
}

    </style>
</head>
    <body class="container-fluid">
         <h1 style="font-weight: bolder;color:red; text-align: center;">Unpaid Balance</h1>
  
         <div class="row">
            <div class="col-sm-12" style="text-align: center;">

                <!--creating distributor table...-->
                <table class="table table-hover">
                    <thead>
                      <tr>
                          <th>Sereial No.</th>
                        <th>Customer Name</th>
                        <th>Customer Id</th>
                        <th>Unpaid Balance</th>
                        <th>Address</th>
                        <th>Mobile No</th>
                       
                        
                      </tr>
                    </thead>
                    <tbody>
                      
               
                        <% unpaidBalanceData.forEach(function( eachData){ %>
                     
                      <tr>
                        <td></td>
                        <td><%= eachData.rName%></td>
                        <td><%= eachData.rClientId%></td>
                        <td><%= eachData.rLeftBal%></td>
                        <td><%= eachData.rAddress%></td>
                        <td><%= eachData.rMobNo%></td>
                       
                       
                        
                      </tr>
                      
                      <% }) %>
                    </tbody>
                  </table>

            </div>

         </div>

         <hr/>

    </body>


</html>


