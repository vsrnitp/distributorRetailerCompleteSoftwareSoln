<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <title>

    </title>
    <style>

body
{
    counter-reset: Count-Value;     
}
table
{
    border-collapse: separate;
}
tr td:first-child:before
{
  counter-increment: Count-Value;   
  content:  counter(Count-Value);
}

    </style>
</head>
    <body class="container-fluid">
         <h1 style="font-weight: bolder;color:rebeccapurple; text-align: center;">SALE RECORD</h1>
        

         <hr/>

         <div class="row">
           <div class="col-sm-12" style="text-align: center;">

               <!--creating customer table...-->
               <table class="table table-hover">
                <thead>
                  <tr>
                      <th>Sereial No.</th>
                    <th>Customer Name</th>
                    <th>Amount Paid</th>
                    <th>Address</th>
                    <th>Mobile No</th>
                    <th>Ordered Quantity</th>
                    <th>Date of Sale</th>
                    <th>Product Name</th>
                    <th>Product Price(total)</th>
                    <th>Net Payable Amount</th>
                  </tr>
                </thead>
                <tbody>
                  
           
                    <% retailSaleData.forEach(function( eachData){ %>
                     
                  <tr>
                    <td></td>
                    <td><%= eachData.rCustomerName%> <div>(<%= eachData.rCustomerId%> )</div></td>
                    <td><%= eachData.rAmountPaidByCustomer%></td>
                    <td><%= eachData.rCustomerAddress%></td>
                    <td><%= eachData.rCustomerMobNo%></td>
                    <td><%= eachData.rCustomerOrderQuantity%></td>
                    <td><%= eachData.rCustomerDateOfSale%></td>
                    <td><%= eachData.rProductName%></td>
                    <td><%= eachData.rProductTotalPrice%></td>
                    <td><%= eachData.rNetPayableAmount%></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>


           </div>
         </div>
    </body>


</html>


